{
  "comments": {
    "lineComment": "--"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^#(fn|entry|test|err|type|enum)\\b",
    "decreaseIndentPattern": "^\\s*$"
  },
  "wordPattern": "[a-zA-Z_#][a-zA-Z0-9_]*"
}
